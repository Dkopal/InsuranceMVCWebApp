@using InsuranceMVC.DAL.Entities.Enums;
@model InsuranceMVCWebApp.Models.InsuredEventModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Insured event</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="InsuranceId" />
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descriptions" class="control-label"></label>
                <input asp-for="Descriptions" class="form-control" />
                <span asp-validation-for="Descriptions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedWhen" class="control-label"></label>
                <input asp-for="CreatedWhen" class="form-control" />
                <span asp-validation-for="CreatedWhen" class="text-danger"></span>
            </div>       
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Details" asp-controler="Insurance" asp-route-id="@Model.InsuranceId" class="btn btn-dark">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
